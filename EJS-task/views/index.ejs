
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello world</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>
<body>
    
    <div class="table-responsive-sm">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Duree</th>
                    <th>
                        Actions
                        <a class="btn btn-info" href="/task/create">Create</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% tasks.forEach( (task) =>{ %>
                <tr>
                    <td><%= task.id %></td>
                    <td><%= task.name %></td>
                    <td><%= task.duree %></td>
                    <td>
                        <a class="btn btn-warning" href="/task/<%= task.id %>/edit">Update</a>
                        <a class="btn btn-danger" href="/task/<%= task.id %>/delete">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>